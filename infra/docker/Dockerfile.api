FROM node:18-alpine

WORKDIR /app

# Copy workspace files
COPY package*.json ./
COPY packages/shared ./packages/shared
COPY apps/api ./apps/api

# Install dependencies
RUN npm ci

# Build
RUN npm run -w packages/shared build
RUN npm run -w apps/api build

EXPOSE 3001

CMD ["npm", "run", "-w", "apps/api", "start"]
